<%- include("../partials/header") %>

<div class="container">
	<div class="row">
		<h1 style="text-align: center">
			Edit <%= restaurant.name %>
		</h1>

		<div style="width: 30%; margin: 25px auto">
			<form action="/restaurants/<%= restaurant._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="restaurant[name]" value="<%= restaurant.name %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="number" name="restaurant[price]" value="<%= restaurant.price %>" min="0.01" step="0.01">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="restaurant[image]" value="<%= restaurant.image %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="restaurant[phone]" value="<%= restaurant.phone %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="restaurant[page]" value="<%= restaurant.page %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="restaurant[time]" value="<%= restaurant.time %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="restaurant[covid19_update]" value="<%= restaurant.covid19_update %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="restaurant[description]" value="<%= restaurant.description %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="restaurant[location]" value="<%= restaurant.location %>">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-warning btn-block">
						submit
					</button>
				</div>
					
			</form>	
			<a href="/restaurants">Go Back</a>
		</div>
		

		
	</div>
</div>


<%- include("../partials/footer") %>