<%- include("../partials/header") %>

<div class="container">
	<div class="row">
		<h1 style="text-align: center">
			Post a New Chinese Restaurant
		</h1>

		<div style="width: 30%; margin: 25px auto">
			<form action="/restaurants" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="name" placeholder="name">
				</div>
				<div class="form-group">
					<input class="form-control" type="number" name="price" placeholder="average cost" min="0.01" step="0.01">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="image" placeholder="image url">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="phone" placeholder="phone number">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="page" placeholder="main page">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="time" placeholder="service hours">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="covid19_update" placeholder="updates relating to COVID-19">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="description" placeholder="description">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="location" placeholder="location">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-warning btn-block">
						submit
					</button>
				</div>
					
			</form>	
			<a href="/restaurants">Go Back</a>
		</div>
		

		
	</div>
</div>


<%- include("../partials/footer") %>